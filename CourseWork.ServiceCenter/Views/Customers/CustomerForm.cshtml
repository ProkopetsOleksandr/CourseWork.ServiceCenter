@model CourseWork.ServiceCenter.Models.Customer
@{
    ViewBag.Title = "CustomerForm";
}

@if (Model.Id == 0)
{
    <h2>Новий клієнт</h2>
}
else
{
    <h2>Редагування клієнта (id: @Model.Id)</h2>
}

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Phone)
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Phone)
    </div>

    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()

    if(Model.Id == 0)
    {
        <button type="submit" class="btn btn-success">Створити</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Зберігти</button>
    }
    
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}