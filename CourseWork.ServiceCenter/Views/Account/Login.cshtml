@using CourseWork.ServiceCenter.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}

<div class="container-fluid login-body">
    <div class="login-wrapper">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form login-form", role = "form" }))
        {
            <img src="~/Images/avatar.png" />
            <h2>Авторизація</h2>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Email, new { id = "loginUser", autocomplete = "new-password" })
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="input-group">
                @Html.PasswordFor(m => m.Password, new { id = "passwordUser", autocomplete = "new-password" })
                @Html.LabelFor(m => m.Password)
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            @Html.AntiForgeryToken()
            <input type="submit" value="Війти" class="btn btn-default login-submit" />
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}